<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:errorEnabled="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/subjectHint"
            android:inputType="text"
            />

    </android.support.design.widget.TextInputLayout>

   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id='@+id/labButtonId'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/labButton"
            android:onClick="setFormVisibility"/>

        <Button
            android:id='@+id/tutButtonId'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/tutButton"
            android:onClick="setFormVisibility"/>

        <Button
            android:id='@+id/lecButtonId'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/lecButton"
            android:onClick="setFormVisibility"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/labcardview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            android:visibility="gone">
        <LinearLayout
            android:id="@+id/labform"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:visibility="visible">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/hScoreInputLayoutLab"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                app:errorEnabled="true">

                <EditText
                    android:inputType="number"
                    android:id="@+id/maxScoreLab"
                    android:layout_width="412dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/highScoreHint" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/minScoreInputLayoutLab"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/passScoreLab"
                    android:layout_width="412dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/passScoreHint"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/startHourInputLayoutLab"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    app:errorEnabled="true">
                <TextView
                    android:id="@+id/startHourTxtLab"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="@string/startHourHint"
                    android:onClick="showCalendar"
                    android:textAlignment="center"
                    android:textSize="20sp"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/endHourInputLayoutLab"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    app:errorEnabled="true">
                <TextView
                    android:id="@+id/endHourTxtLab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/endHourHint"
                    android:onClick="showCalendar"
                    android:textAlignment="center"
                    android:textSize="20sp"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dateInputLayoutLab"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    app:errorEnabled="true">

                    <TextView
                        android:id="@+id/dateTxtLab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="@string/classStartDate"
                        android:onClick="showCalendarDay"
                        android:textAlignment="center"
                        android:textSize="20sp"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <RadioButton android:id="@+id/lab_radio_once"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onceAWeek"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.17" />
                <RadioButton android:id="@+id/lab_radio_twice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/twiceAWeek"
                    android:layout_weight="0.46" />
                </RadioGroup>
            <CheckBox
                android:id="@+id/checkBoxLab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="true"
                android:text="@string/pushLabel"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/tutcardview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            android:visibility="gone">
        <LinearLayout

            android:id="@+id/tutform"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:visibility="visible">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/hScoreInputLayoutTut"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/maxScoreTut"
                    android:layout_width="412dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/highScoreHint"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/minScoreInputLayoutTut"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/passScoreTut"
                    android:layout_width="412dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/passScoreHint"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/startHourInputLayoutTut"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    app:errorEnabled="true">
                    <TextView
                        android:id="@+id/startHourTxtTut"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:hint="@string/startHourHint"
                        android:onClick="showCalendar"
                        android:textAlignment="center"
                        android:textSize="20sp"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/endHourInputLayoutTut"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    app:errorEnabled="true">
                    <TextView
                        android:id="@+id/endHourTxtTut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="@string/endHourHint"
                        android:onClick="showCalendar"
                        android:textAlignment="center"
                        android:textSize="20sp"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dateInputLayoutTut"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    app:errorEnabled="true">

                    <TextView
                        android:id="@+id/dateTxtTut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="@string/classStartDate"
                        android:onClick="showCalendarDay"
                        android:textAlignment="center"
                        android:textSize="20sp"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <RadioButton android:id="@+id/tut_radio_once"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onceAWeek"
                    android:layout_weight="0.29" />
                <RadioButton android:id="@+id/tut_radio_twice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/twiceAWeek"
                    android:layout_weight="0.36" />
            </RadioGroup>
            <CheckBox
                android:id="@+id/checkBoxTut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="true"
                android:text="@string/pushLabel"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/leccardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:visibility="gone"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:visibility="visible">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/hScoreInputLayoutLec"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/maxScoreLec"
                        android:layout_width="412dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/highScoreHint" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/minScoreInputLayoutLec"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/passScoreLec"
                        android:layout_width="412dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/passScoreHint" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/startHourInputLayoutLec"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        app:errorEnabled="true">

                        <TextView
                            android:id="@+id/startHourTxtLec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="@string/startHourHint"
                            android:onClick="showCalendar"
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/endHourInputLayoutLec"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        app:errorEnabled="true">

                        <TextView
                            android:id="@+id/endHourTxtLec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="@string/endHourHint"
                            android:onClick="showCalendar"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/dateInputLayoutLec"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        app:errorEnabled="true">

                        <TextView
                            android:id="@+id/dateTxtLec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="@string/classStartDate"
                            android:onClick="showCalendarDay"
                            android:textAlignment="center"
                            android:textSize="20sp"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="369dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <RadioButton android:id="@+id/lec_radio_once"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onceAWeek"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.22" />
                    <RadioButton android:id="@+id/lec_radio_twice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twiceAWeek"
                        android:layout_weight="0.38" />
                </RadioGroup>
                <CheckBox
                    android:id="@+id/checkBoxLec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:checked="true"
                    android:text="@string/pushLabel"
                    android:textAlignment="center"
                    android:textSize="20sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <Button
        android:id='@+id/addSubjectBtn'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/addClasses" />
</LinearLayout>
</ScrollView>